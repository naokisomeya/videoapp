<div class="container">
<%= form_with model: micropost do |form| %>

<div class="form-group">
<%= form.label :name, "タイトル", class: "label" %>
 <%= form.text_field :name, class: 'form-control' %>
</div>

<div class="form-group ">
<%= form.label :youtube_url, "URL", class: "label" %>
<%= form.text_field :youtube_url, class: 'form-control' %>
</div>

<div class="form-group">
<%= form.label :content, "評価", class: "label" %>
<%= form.text_area :content, class: 'form-control' %>
</div>

<%= form.submit '投稿'%>
<% end %>
 </div>
</div>
