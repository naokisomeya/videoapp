
 <%= form_with model: micropost do |f| %>
 <div class="container">
 <div class="row">
  <div class="form-group col-xs-8 col-md-8 col-lg-8 mx-auto">
  
  <%= render 'layouts/error_messages', model: f.object %>
  <%= f.label :name, "タイトル", class: "label" %>
  <%= f.text_field :name, class: 'form-control', autocomplete: "off" %>
</div>
<div class="form-group col-xs-8 col-md-8 col-lg-8 mx-auto ">
 <%= f.label :youtube_url, "YOUTUBE URL", class: "label" %>
 <%= f.text_field :youtube_url, class: 'form-control', autocomplete: "off" %>
 <p>※ URLはYOUTUBE動画下部にある共有からコピーしてください</p>
</div>
<div class="form-group col-xs-8 col-md-8 col-lg-8 mx-auto ">
 <%= f.label :content, "評価", class: "label" %>
 <%= f.text_area :content, class: 'form-control', autocomplete: "off" %>
</div>

<%= f.submit '投稿', class: "col-xs-3 col-md-7 col-lg-8 btn btn-dark mx-auto"%>
  <% end %>
 </div>
 </div>
 </div>

