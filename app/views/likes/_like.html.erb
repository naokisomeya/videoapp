<% if current_user.already_liked?(@micropost) %>
  <%= link_to micropost_likes_path(@micropost), method: :delete, remote: true do %>
  <i class="fas fa-heart fa-lg" style="color: red;"></i>
  <% end %>
 <%= @micropost.likes.count %>
<% else %>
  <%= link_to micropost_likes_path(@micropost), method: :post, remote: true do %>
  <i class="far fa-heart fa-lg"></i>
  <% end %>
  <%= @micropost.likes.count %>
<% end %>
